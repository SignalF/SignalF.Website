@inherits LayoutComponentBase
<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';" >
    <RadzenHeader class="rz-py-4" >
        <RadzenRow class="rz-mx-auto rz-mb-auto" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="max-width: 1440px;">
                <RadzenLink Text="Text" Path="./">
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenImage Path="images/logo_text.png" class="rz-display-none rz-display-lg-block" Style="height: 50px;"></RadzenImage>
                    </RadzenStack>
                </RadzenLink>
        </RadzenRow>
        <RadzenRow class="rz-mx-auto" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceEvenly" Style="max-width: 1440px;" >
                <!--<RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End"></RadzenStack>-->
                    <RadzenMenu Click="OnParentClicked" class="rz-pt-2 rz-mx-4" Style="font-weight: bold; font-size: 12pt"  >
                        <RadzenMenuItem Text="Documentation" Icon="description" Path="https://docs.signalf.net" Target="_blank" class="rz-mx-8"></RadzenMenuItem>
                        <RadzenMenuItem Text="Discussion Forum" Icon="groups" Path="https://github.com/orgs/SignalF/discussions" Target="_blank" class="rz-mx-8"></RadzenMenuItem>
                        <RadzenMenuItem Text="Source code" Icon="code" Path="https://github.com/SignalF" Target="_blank"  class="rz-mx-8"></RadzenMenuItem>
                        <RadzenMenuItem Text="Packages" Icon="deployed_code" Path="https://www.nuget.org/profiles/SignalF" Target="_blank" class="rz-mx-8"></RadzenMenuItem>
                    </RadzenMenu>      
                <!--<RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End"></RadzenStack>-->
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody>
        <RadzenRow class="rz-mx-auto rz-px-4" Style="max-width: 1440px;">
         <RadzenBreadCrumb>
         </RadzenBreadCrumb>
        </RadzenRow>
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            <RadzenRow>
                @Body
            </RadzenRow>
            </RadzenColumn>
        </RadzenRow>
  
        <RadzenFooter class="" Style="background-color: #00A4CD; margin-left: -15px">
        <RadzenRow class="" Style="max-width: 1440px;">
        <RadzenColumn  Size="12">
        <RadzenText>Copyright 2024 scotec Software Solutions AB</RadzenText>
        </RadzenColumn>
        </RadzenRow>
    </RadzenFooter > 
 </RadzenBody>
  
</RadzenLayout>
 

